<form>
    <div class="input-group mb-3">

        <input type="text"
               name="q"
               class="form-control"
               placeholder="Найти..."
               value="{{ app.request.get('q') }}"
        >

        <div class="input-group-append">
            <button type="submit" class="btn btn-outline-secondary"><i class="fa fa-search"></i>
            </button>
        </div>
    </div>

    <div class="input-group mb-3">
        <div class="form-check">

            <input type="checkbox"
                   name="showDeleted"
                   class="form-check-input"
                    {% if app.request.query.has('showDeleted') %} checked {% endif %}
            >

            <label class="form-check-label">{{ deletedLabel }}</label>
            <label>
                <select name="limit">
                    <option value="10" {% if app.request.query.getInt('limit', 20) == 10 %} selected {% endif %}>10
                    </option>
                    <option value="20" {% if app.request.query.getInt('limit', 20) == 20 %} selected {% endif %}>20
                    </option>
                    <option value="50"{% if app.request.query.getInt('limit', 20) == 50 %} selected {% endif %}>50
                    </option>
                </select>
            </label>
        </div>

    </div>

</form>